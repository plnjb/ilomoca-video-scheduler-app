{
  "name": "ilomoca-audio-scheduler",
  "version": "5.0.0",
  "description": "ILOMOCA Audio Scheduler Desktop App",
  "main": "main.js",
  "author": "Pauline Joy Bautista",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-store": "^11.0.2",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "build": {
    "appId": "com.ilomoca.audioscheduler",
    "productName": "ILOMOCA Audio Scheduler",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "frontend/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false
    },
    "mac": {
      "target": []
    }
  }
}
